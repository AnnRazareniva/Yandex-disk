<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="720.0"
      prefWidth="980.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="org.example.yandexdisk.Controller">
   <Pane prefHeight="120.0" prefWidth="1020.0">
      <children>
         <Label alignment="TOP_LEFT" layoutX="14.0" layoutY="14.0" text="Яндекс ">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
            <graphic>
               <ImageView fitHeight="66.0" fitWidth="57.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../YandexDisk.png" />
                  </image>
               </ImageView>
            </graphic>
         </Label>
         <Label layoutX="187.0" layoutY="20.0" prefHeight="45.0" prefWidth="75.0" text="Диск">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
      </children>
   </Pane>
   <VBox alignment="CENTER" prefHeight="425.0" prefWidth="1016.0">
      <children>
          <Button fx:id="LogIn" alignment="CENTER" onAction="#OnLogInButtonClick" text="Войти с Яндекс ID">
            <graphic>
               <ImageView fitHeight="36.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../Frame_24.png" />
                  </image>
               </ImageView>
            </graphic>
            <padding>
               <Insets bottom="20.0" left="55.0" right="55.0" top="20.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="30.0" />
            </VBox.margin>
          </Button>
         <Label text="Или скачать файл по ссылке:" textFill="#707b91">
            <font>
               <Font size="15.0" />
            </font>
            <VBox.margin>
               <Insets bottom="20.0" top="35.0" />
            </VBox.margin>
         </Label>
         <TextField fx:id="linkField" maxHeight="20.0" maxWidth="500.0" prefHeight="25.0" prefWidth="500.0">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin></TextField>
         <Button fx:id="Download" mnemonicParsing="false" onAction="#OnDownloadButtonClick" prefHeight="40.0" prefWidth="110.0" text="Скачать" />
      </children>
      <padding>
         <Insets bottom="30.0" />
      </padding>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </VBox>
   <padding>
      <Insets left="20.0" top="20.0" />
   </padding>
</VBox>
